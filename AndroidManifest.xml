<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.droidstack"
      android:versionCode="6"
      android:versionName="1.0-4"
      android:installLocation="auto">
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light">
        <activity android:name=".Sites"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SiteActions" />
        <activity android:name=".Questions">
        	<intent-filter
        		android:icon="@drawable/icon"
        		android:label="@string/intent_questions">
        		<action android:name="android.intent.action.VIEW" />
        		<action android:name="android.intent.action.PICK" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data 
        			android:scheme="droidstack"
        			android:host="questions" />
        		<data android:path="/all" />
        		<data android:path="/search" />
        		<data android:path="/unanswered" />
        		<data android:path="/user" />
        		<data android:path="/favorites" />
        	</intent-filter>
        </activity>
        <activity android:name=".Answers">
	        <intent-filter
	        	android:icon="@drawable/icon"
	        	android:label="@string/intent_answers">
	        	<action android:name="android.intent.action.VIEW" />
	        	<action android:name="android.intent.action.PICK" />
	        	<category android:name="android.intent.category.DEFAULT" />
	        	<data 
	        		android:scheme="droidstack"
	        		android:host="answers" />
	        	<data android:path="/user" />
	        </intent-filter>
	    </activity>
        <activity android:name=".ViewQuestion">
        	<intent-filter
	        	android:icon="@drawable/icon"
	        	android:label="@string/intent_answers">
	        	<action android:name="android.intent.action.VIEW" />
	        	<category android:name="android.intent.category.DEFAULT" />
	        	<data 
	        		android:scheme="droidstack"
	        		android:host="question"
	        		android:path="" />
	        </intent-filter>
	    </activity>
	    <activity android:name=".Preferences" android:label="Preferences" />
	    
	    <receiver android:name=".BootReceiver">
	    	<intent-filter>
	    		<action android:name="android.intent.action.BOOT_COMPLETED" />
	    	</intent-filter>
	    </receiver>
	    
	    <service android:name=".NotificationService">
	    	<intent-filter>
	    		<action android:name="org.droidstack.NotificationService" />
	    	</intent-filter>
	    </service>
    </application>
    <uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
</manifest> 